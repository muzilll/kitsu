{
  "name": "kitsu",
  "version": "0.19.25",
  "description": "Production Management Software (user interface)",
  "author": "Frank Rousseau <frank@cg-wire.com>",
  "repository": "https://github.com/cgwire/kitsu",
  "license": "AGPL-3.0",
  "private": true,
  "type": "module",
  "main": "out/main/index.cjs",
  "scripts": {
    "dev": "vite",
    "dev_e": "electron-vite dev",
    "build": "electron-vite build",
    "build2": "vue-tsc --noEmit && electron-vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore src/",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write --list-different src/**/*.{js,vue}",
    "test:unit": "vitest tests/unit",
    "prepare": "husky install",
    "prebuild": "electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@animxyz/vue": "0.6.7",
    "@fullcalendar/core": "6.1.11",
    "@fullcalendar/daygrid": "6.1.11",
    "@fullcalendar/multimonth": "6.1.11",
    "@fullcalendar/vue": "6.1.11",
    "@google/model-viewer": "3.4.0",
    "@sentry/vue": "7.110.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "async": "3.2.5",
    "bowser": "2.11.0",
    "chart.js": "2.9.4",
    "color-hash": "2.0.2",
    "color-string": "1.9.1",
    "colors": "1.4.0",
    "electron-window-state": "^5.0.3",
    "format-unicorn": "^1.1.1",
    "fabric": "cgwire/fabric.js",
    "marked": "4.3.0",
    "marked-emoji": "1.3.2",
    "moment": "2.30.1",
    "moment-timezone": "0.5.45",
    "panzoom": "9.4.3",
    "papaparse": "5.4.1",
    "qrcode.vue": "1.7.0",
    "sanitize-html": "2.13.0",
    "socket.io-client": "4.7.5",
    "superagent": "8.1.2",
    "textarea-caret": "3.1.0",
    "thenby": "1.3.4",
    "three": "0.162.0",
    "uuid": "9.0.1",
    "v-autocomplete": "1.8.2",
    "vue": "2.7.16",
    "vue-at": "2.5.1",
    "vue-chartkick": "0.6.1",
    "vue-drag-drop": "1.1.4",
    "vue-feather-icons": "5.1.0",
    "vue-i18n": "8.28.2",
    "vue-meta": "2.4.0",
    "vue-router": "3.6.5",
    "vue-scroll": "2.1.13",
    "vue-slider-component": "2.8.16",
    "vue-textarea-autosize": "1.1.1",
    "vue-websocket-next": "0.2.5",
    "vuedraggable": "2.24.3",
    "vuejs-datepicker": "1.6.2",
    "vuex": "3.6.2",
    "vuex-router-sync": "5.0.0",
    "wavesurfer.js": "6.6.4"
  },
  "devDependencies": {
    "@types/vue-feather-icons": "5.0.8",
    "@vitejs/plugin-vue2": "2.3.1",
    "@vue/compiler-sfc": "2.7.16",
    "@vue/test-utils": "1.3.6",
    "autoprefixer": "10.4.19",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "electron-store": "^8.2.0",
    "electron-vite": "^2.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-vue": "9.25.0",
    "esm": "3.2.25",
    "husky": "8.0.3",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "localStorage": "1.0.4",
    "prettier": "3.2.5",
    "sass": "1.75.0",
    "typescript": "^5.4.2",
    "vite": "5.2.8",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "0.34.6",
    "vitest-localstorage-mock": "0.1.2",
    "vue-template-compiler": "2.7.16",
    "vue-tsc": "^2.0.6"
  },
  "engines": {
    "node": ">=18.12"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --cache --fix"
  },
  "overrides": {
    "canvas": "uuiid/node-canvas"
  },
  "build": {
    "appId": "com.cgwire.kitsu",
    "productName": "Kitsu",
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "package.json",
      "public/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "portable"
        },
        {
          "target": "zip"
        }
      ]
    }
  }
}
